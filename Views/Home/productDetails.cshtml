@model ECommerce.Models.Product

@{
    ViewData["Title"] = "تفاصيل المنتج";
}

<!DOCTYPE html>
<html lang="en" >
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@Model.Name - تفاصيل المنتج</title>
    <style>
        body {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background-color: #fafafa;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .cta-buttons form,
        .cta-buttons a {
            display: inline-block;
        }

        .product-container {
            max-width: 1200px;
            margin: 20px auto;
            display: flex;
            gap: 40px;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 10px rgb(0 0 0 / 0.1);
        }
        /* IMAGE GALLERY */
        .image-gallery {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .main-image img {
            width: 100%;
            border-radius: 10px;
            object-fit: contain;
           height: 500px;
            box-shadow: 0 2px 8px rgb(0 0 0 / 0.15);
        }

        .main-image {
            overflow: hidden;
        }
        .thumbnail-gallery {
            display: flex;
            gap: 10px;
            overflow-x: auto;
        }

            .thumbnail-gallery img {
                width: 80px;
                height: 80px;
                object-fit: cover;
                border-radius: 6px;
                cursor: pointer;
                border: 2px solid transparent;
                transition: border-color 0.3s;
            }

                .thumbnail-gallery img:hover {
                    border-color: #27ae60;
                }

        /* PRODUCT DETAILS */
        .product-details {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

            .product-details h1 {
                font-size: 2rem;
                margin-bottom: 5px;
                font-weight: 700;
            }

            .product-details h4, .product-details h5 {
                color: #666;
                margin: 0;
            }

        .price-section {
            margin: 15px 0;
            font-size: 1.8rem;
            color: #27ae60;
            font-weight: bold;
        }

        .reviews {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 1.1rem;
            color: #f1c40f;
        }

        .stars {
            font-size: 1.4rem;
        }

        .review-count {
            color: #555;
            font-weight: 600;
        }

        .description {
            font-size: 1rem;
            line-height: 1.6;
            color: #444;
            margin-top: 10px;
        }

        /* BUTTONS */
        .cta-buttons {
            display: flex;
            gap: 15px;
            margin-top: 25px;
        }

        .btn-primary, .btn-favorite {
            cursor: pointer;
            padding: 0px 25px;
            border-radius: 6px;
            font-size: 1rem;
            border: none;
            font-weight: 600;
            transition: background-color 0.3s;
            box-shadow: 0 4px 12px rgb(39 174 96 / 0.3);
            margin-top:15px;
        }

        .btn-primary {
            background-color: #27ae60;
            color: white;
        }

            .btn-primary:hover {
                background-color: #219150;
            }

        .btn-favorite {
            background-color: #e74c3c;
            color: white;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .btn-favorite:hover {
                background-color: #c0392b;
            }

            .btn-favorite svg {
                width: 20px;
                height: 20px;
                fill: white;
            }

        /* REVIEW SECTION */
        .review-section {
            max-width: 1200px;
            background: #fff;
            margin: 40px auto;
            border-radius: 10px;
            box-shadow: 0 2px 12px rgb(0 0 0 / 0.1);
            padding: 30px 40px;
        }

            .review-section h2 {
                text-align: center;
                margin-bottom: 30px;
                font-weight: 700;
                color: #27ae60;
                font-size: 1.8rem;
            }

        form .form-row {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        form label {
            display: block;
            font-weight: 600;
            margin-bottom: 6px;
        }

        form input[type="text"],
        form input[type="email"],
        form textarea {
            width: 100%;
            padding: 10px 15px;
            font-size: 1rem;
            border-radius: 5px;
            border: 1px solid #ccc;
            resize: vertical;
            font-family: inherit;
        }

        form textarea {
            min-height: 90px;
        }

        form .form-col-6 {
            flex: 1 1 48%;
        }

        form .form-col-12 {
            flex: 1 1 100%;
        }

        form button {
            margin-top: 20px;
            background-color: #27ae60;
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            font-size: 1.1rem;
            cursor: pointer;
            font-weight: 700;
            transition: background-color 0.3s;
        }

            form button:hover {
                background-color: #219150;
            }

        /* REVIEWS LIST */
        .reviews-list {
            margin-top: 50px;
        }

            .reviews-list h3 {
                font-size: 1.5rem;
                color: #27ae60;
                margin-bottom: 20px;
                font-weight: 700;
            }

        .review-item {
            border-bottom: 1px solid #ddd;
            padding: 15px 0;
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

            .review-item:last-child {
                border-bottom: none;
            }

        .review-name {
            font-weight: 700;
            font-size: 1.1rem;
            color: #333;
        }

        .review-email {
            font-size: 0.9rem;
            color: #777;
        }

        .review-subject {
            font-weight: 600;
            color: #27ae60;
        }

        .review-description {
            font-size: 1rem;
            color: #444;
            line-height: 1.4;
        }

        /* RECOMMENDED PRODUCTS */
        .recommended-products {
            max-width: 1200px;
            margin: 60px auto 40px;
            padding: 0 10px;
        }

            .recommended-products h3 {
                color: #27ae60;
                margin-bottom: 20px;
                font-weight: 700;
                font-size: 1.8rem;
                text-align: center;
            }

        .products-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .product-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgb(0 0 0 / 0.1);
            width: 220px;
            padding: 15px;
            text-align: center;
            transition: transform 0.3s ease;
            cursor: pointer;
        }

            .product-card:hover {
                transform: scale(1.05);
            }

            .product-card img {
                width: 100%;
                border-radius: 8px;
                height: 180px;
                object-fit: cover;
                margin-bottom: 10px;
            }

            .product-card h4 {
                font-size: 1.1rem;
                margin: 10px 0 5px;
                color: #333;
            }

            .product-card .price {
                font-weight: 700;
                color: #27ae60;
                font-size: 1.1rem;
            }

            .product-card .rating {
                color: #f1c40f;
                font-size: 1.2rem;
                margin: 8px 0;
            }

            .product-card .add-to-cart-btn {
                background-color: #27ae60;
                color: white;
                padding: 8px 12px;
                border-radius: 6px;
                font-size: 0.9rem;
                text-decoration: none;
                display: inline-block;
                margin-top: 8px;
                transition: background-color 0.3s;
            }

                .product-card .add-to-cart-btn:hover {
                    background-color: #219150;
                }
        

        .recommended-products {
            max-width: 90%;
        }

        }
    </style>
</head>
<body >

    <div class="product-container" lang="ar" dir="rtl">

        <!-- IMAGE GALLERY -->
        <div class="image-gallery">
            <div class="main-image">
                <img id="mainProductImage" src="https://localhost:62599/upload/@Model.Photo" alt="@Model.Name" />
            </div>
            <div class="thumbnail-gallery">
                @foreach (var item in Model.ProductImages)
                {
                    <img src="https://localhost:62599/upload/@item.Images" alt="Thumbnail" onclick="document.getElementById('mainProductImage').src=this.src" />
                }
            </div>
        </div>

        <!-- PRODUCT DETAILS -->
        <div class="product-details">
            <h1>@Model.Name</h1>
            <h4>من قسم: @Model.Cat.Name</h4>
            <h5> اسم البائع : @Model.SupplierName</h5>
            <h5>تاريخ إضافة المنتج: @(Model.EntryDate.HasValue ? Model.EntryDate.Value.ToString("yyyy-MM-dd") : "غير متوفر")</h5>

            <div class="price-section">
                <span>@(Model.Price.HasValue ? Model.Price.Value.ToString("C") : "السعر غير متوفر")</span>
            </div>

            <div class="reviews">
                <span class="stars">
                    @for (int i = 0; i < 5; i++)
                    {
                        <span>⭐</span>
                    }
                </span>
                <span class="review-count">(@(Model.Reviews?.Count() ?? 0) تقييم)</span>
            </div>

            <p class="description">
                @Model.Description
            </p>

            <div class="cta-buttons">
                <a href="/Home/AddToCart/@Model.Id" class="btn-primary" style="height:50px">أضف إلى السلة</a>
                <form method="post" asp-action="AddToFavorite" asp-controller="Home">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <button type="submit" class="btn-favorite">
                        ❤️ أضف إلى المفضلة
                    </button>
                </form>
            </div>

        </div>
    </div>

    <!-- REVIEW SECTION -->
    <section class="review-section" dir="rtl">
        <h2>قيّم هذا المنتج</h2>
        <form asp-action="myReview" asp-controller="Home" method="post" novalidate>
            <input type="hidden" name="ProductId" value="@ViewBag.ProductId" />
            <div class="form-row">
                <div class="form-col-6">
                    <label for="Name">الاسم</label>
                    <input type="text" id="Name" name="Name" required />
                </div>
                <div class="form-col-6">
                    <label for="Email">البريد الإلكتروني</label>
                    <input type="email" id="Email" name="Email" required />
                </div>
                <div class="form-col-12">
                    <label for="Subject">عنوان التقييم</label>
                    <input type="text" id="Subject" name="Subject" required />
                </div>
                <div class="form-col-12">
                    <label for="Description">محتوى التقييم</label>
                    <textarea id="Description" name="Description" required></textarea>
                </div>
            </div>
            <button type="submit">إرسال التقييم</button>
        </form>
        </section>
        <!-- User reviews list -->
        <section class="review-section" dir="rtl">
        <div class="reviews-list">
            <h3>آراء المستخدمين</h3>
            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                foreach (var review in Model.Reviews.OrderByDescending(r => r.Id))
                {
                    <div class="review-item">
                        <div class="review-name">@review.Name</div>
                        <div class="review-email">@review.Email</div>
                        <div class="review-subject">@review.Subject</div>
                        <div class="review-description">@review.Description</div>
                    </div>
                }
            }
            else
            {
                <p>لا توجد تقييمات لهذا المنتج بعد.</p>
            }
        </div>
    </section>

    <!-- RECOMMENDED PRODUCTS -->
    <section class="recommended-products" dir="rtl">
        <h3>منتجات ذات صلة</h3>
        <div class="products-container">
            @if (ViewBag.RecommendedProducts != null && ViewBag.RecommendedProducts.Count > 0)
            {
                foreach (var product in ViewBag.RecommendedProducts)
                {
                    <div class="product-card">
                        <a href="/Home/ProductDetails/@product.Id">
                            <img src="https://localhost:62599/upload/@product.Photo" alt="@product.Name" />
                            <h4>@product.Name</h4>
                            <span class="price">@product.Price.ToString("C")</span>
                            <div class="rating">⭐⭐⭐⭐⭐</div>
                        </a>
                        <a href="/Home/AddToCart/@product.Id" class="add-to-cart-btn">🛒 إضافة إلى السلة</a>
                    </div>
                }
            }
            else
            {
                <p style="text-align:center;">لا توجد منتجات مقترحة حاليًا.</p>
            }
        </div>
    </section>

</body>
</html>
